    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
        integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <a class="navbar-brand" style="color: rgb(191, 255, 161)">Phones</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
            </ul>
            <form method="POST" action='/search' class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="Search"   id="myInput" type="search" placeholder="Search"
                aria-label="Search" List="datalist" onkeyup="ac(this.value)">
                <script type="text/javascript">
                    var tags = [ 
                    "Boxing Bag",
                    "Tennis Racket",
                    "Leaves of Grass",
                    "The Sun and Her Flowers",
                    "Galaxy S21 Ultra",
                    "iPhone 13 Pro"


                 
                      ];
                  
                      /*list of available options*/
                     var n= tags.length; //length of datalist tags    
                  
                     function ac(value) {
                        document.getElementById('datalist').innerHTML = '';
                         //setting datalist empty at the start of function
                         //if we skip this step, same name will be repeated
                           
                         l=value.length;
                         //input query length
                     for (var i = 0; i<n; i++) {
                         if(((tags[i].toLowerCase()).indexOf(value.toLowerCase()))>-1)
                         {
                             //comparing if input string is existing in tags[i] string
                  
                             var node = document.createElement("option");
                             var val = document.createTextNode(tags[i]);
                              node.appendChild(val);
                  
                               document.getElementById("datalist").appendChild(node);
                                   //creating and appending new elements in data list
                             }
                         }
                     }
                   
                </script>
                <datalist id="datalist">
  
                    <option value="Boxing Bag"></option>
                    <option value="Tennis Racket"></option>
                    <option value="Leaves of Grass"></option>
                    <option value="The Sun and Her Flowers"></option>
                    <option value="Galaxy S21 Ultra"></option>
                    <option value="iPhone 13 Pro"></option>
                
                      
                    <!-- This data list will be edited through javascript     -->
                    </datalist>
                  

                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="container1">
        <img id="image" src="/galaxy.jpg" width="193" height="300">
        <br>
        <label id="label1" class="ml-4 my-2">Galaxy S21 Ultra</label>
        <br>
        <button onclick="location.href = '/galaxy';" id="galaxy" class="btn btn-secondary ml-3"> View </button>
    </div>
    <div class="container2">
        <img id="image" src="/iphone.jpg" width="193" height="300">
        <br>
        <label id ="label2" class="ml-4 my-2">iPhone 13 Pro</label>
        <br>
        <button onclick="location.href = '/iphone';" id="iphone" class="btn btn-secondary ml-3"> View </button>
    </div>
