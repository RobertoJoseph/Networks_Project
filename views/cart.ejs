            </ul>
            <form method="POST" action='/search' class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" name="Search"   id="myInput" type="search" placeholder="Search"
                aria-label="Search" List="datalist" onkeyup="ac(this.value)">
                <script type="text/javascript">
                    var tags = [ 
                    "Boxing Bag",
                    "Tennis Racket",
                    "Leaves of Grass",
                    "The Sun and Her Flowers",
                    "Galaxy S21 Ultra",
                    "iPhone 13 Pro"


                 
                      ];
                  
                      /*list of available options*/
                     var n= tags.length; //length of datalist tags    
                  
                     function ac(value) {
                        document.getElementById('datalist').innerHTML = '';
                         //setting datalist empty at the start of function
                         //if we skip this step, same name will be repeated
                           
                         l=value.length;
                         //input query length
                     for (var i = 0; i<n; i++) {
                         if(((tags[i].toLowerCase()).indexOf(value.toLowerCase()))>-1)
                         {
                             //comparing if input string is existing in tags[i] string
                  
                             var node = document.createElement("option");
                             var val = document.createTextNode(tags[i]);
                              node.appendChild(val);
                  
                               document.getElementById("datalist").appendChild(node);
                                   //creating and appending new elements in data list
                             }
                         }
                     }
                   
                </script>
                <datalist id="datalist">
  
                    <option value="Boxing Bag"></option>
                    <option value="Tennis Racket"></option>
                    <option value="Leaves of Grass"></option>
                    <option value="The Sun and Her Flowers"></option>
                    <option value="Galaxy S21 Ultra"></option>
                    <option value="iPhone 13 Pro"></option>
                
                      
                    <!-- This data list will be edited through javascript     -->
                    </datalist>
                  

                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
